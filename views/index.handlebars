<div class="container">

    <h1 id="header">Burgers!</h1>

    <div class="row">
        <div class="col">

            <h2>Burgers that are ready to eat!</h2>
            <hr>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col">

            <h2>Burgers that have been devoured!</h2>
            <hr>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <hr>

    <h2>Add a burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burg">Burger Name:</label>
            <input type="text" id="burg" name="name">
        </div>

        <button type="submit" class="btn btn-success">Add Burger</button>
    </form>
</div>