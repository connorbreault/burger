<div class="container">

    <h1 id="header">Burgers!</h1>

    <div class="row">
        <div class="col-12 col-lg-6" class="burgList">

            <h2>Orders that are ready</h2>
            <hr>
            <ul class="burgs">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-12 col-lg-6">

            <h2>Orders to be cooked</h2>
            <hr>
            <ul class="burgs">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <hr>

    <h2>Add a burger</h2>
    <form class="create-form">

        <div class="form-group" id="addBurgForm">
            <label for="burg" id="nameInput">Burger Name:</label>
            <input type="text" id="burg" name="name">
        </div>

        <button type="submit" class="btn btn-success" id="addButt">Add Burger</button>
    </form>
</div>